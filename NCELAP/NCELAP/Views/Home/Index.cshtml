<div class="section" id="news">
    <div class="container">
        <div class="row mb-3">
            <div class="col-lg-12 text-center">
                <h2>News</h2>
            </div>
        </div>
        <div class="row align-items-center col-spacing-50">

            <div class="col-lg-4">
                <div class="card" style="width: 20rem;">
