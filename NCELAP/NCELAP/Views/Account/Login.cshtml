@{
    Layout = "_LayoutRegister";
    ViewData["Title"] = "User Login";
}
<div ng-controller="loginPageCtrl">
    <!-- BEGIN: Content-->
    <div class="app-content content">
       
                <section class="row flexbox-container">
                    <div class="col-xl-4 col-11 justify-content-center">
                        <div class="card bg-authentication rounded-0 mb-0">
                            <div class="row m-0">
                              
                                <div class="col-lg-12 col-12 p-0">
                                    <div class="card rounded-0 mb-0 px-2">
                                        <div class="card-header pb-1">
                                            <div class="card-title">
                                                <h4 class="mb-0">Login</h4>
                                            </div>
                                        </div>
                                        <p class="px-2">
                                            Welcome back, please login to your account.
                                        </p>
                                        <div class="card-content mb-3">
                                            <div class="card-body pt-1">
                                                <form name="loginForm">
                                                    <fieldset class="form-label-group form-group position-relative has-icon-left">
                                                        <input type="text" ng-model="loginModel.Email" class="form-control" id="user-name" placeholder="Email Address" />
                                                        <div class="form-control-position">
                                                            <i class="feather icon-mail"></i>
                                                        </div>
                                                        <label for="user-name">Email Address</label>

                                                    </fieldset>

                                                    <fieldset class="form-label-group position-relative has-icon-left">
                                                        <input type="password" ng-model="loginModel.Password" class="form-control" id="user-password" placeholder="Password" />
                                                        <div class="form-control-position">
                                                            <i class="feather icon-lock"></i>
                                                        </div>
                                                        <label for="user-password">Password</label>
                                                    </fieldset>
                                                    <div class="form-group d-flex justify-content-between align-items-center">
                                                        <div class="text-left">
                                                            <fieldset class="checkbox">
                                                                <div class="vs-checkbox-con vs-checkbox-primary">
                                                                    <input type="checkbox" />
                                                                    <span class="vs-checkbox">
                                                                        <span class="vs-checkbox--check">
                                                                            <i class="vs-icon feather icon-check"></i>
                                                                        </span>
                                                                    </span>
                                                                    <span class="">Remember me</span>
                                                                </div>
                                                            </fieldset>
                                                        </div>
                                                        <div class="text-right">
                                                            <a href="auth-forgot-password.html"
                                                               class="card-link">Forgot Password?</a>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col col-12">
                                                            <button ng-click="login()" ng-disabled="loginModel.Email === '' || loginModel.Password === ''" class="btn btn-primary btn-block">
                                                                <span class="spinner-grow text-muted" ng-show="loggingIn === true"></span>
                                                                <span ng-show="loggingIn === false"><strong>Login</strong></span>
                                                            </button>
                                                        </div>
                                                    </div>

                                                    <div class="row" ng-show="accountdoesnotexist === true">
                                                        <div class="col col-12 text-center text-danger">
                                                            Invalid user credentials
                                                        </div>
                                                    </div>

                                                    <div class="row" ng-show="accountnotactivated === true">
                                                        <div class="col col-12 text-center text-danger">
                                                            This account is yet to be activated!
                                                        </div>
                                                    </div>


                                                    @*<div class="row" style="padding-top: 10px">
                                                        <div class="col col-12">
                                                            <div class="text-center">
                                                                <a href="/account/register" target="_blank" class="card-link">Don't have an account?</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <a href="auth-register.html"
                                                       class="btn btn-outline-primary float-left btn-inline">Register</a>
                                                    <button type="submit"
                                                            class="btn btn-primary float-right btn-inline">
                                                        Login
                                                    </button>*@
                                                </form>
                                            </div>
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
       
    </div>
    <!-- END: Content-->
</div>

@section footerJS{
    <script src="~/js/controllers/account/login.js"></script>

    <script src="~/Template/app-assets/vendors/js/vendors.min.js"></script>
    <script src="~/Template/app-assets/js/core/app-menu.min.js"></script>
    <script src="~/Template/app-assets/js/core/app.min.js"></script>
    <script src="~/Template/app-assets/js/scripts/components.min.js"></script>
}
