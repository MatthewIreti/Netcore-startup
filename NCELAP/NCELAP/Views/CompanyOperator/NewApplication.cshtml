
@{
    ViewData["Title"] = "NewApplication";
    Layout = "_LayoutDashboard";
}

<style>
    #ic,
    #passport {
        display: none;
    }
</style>

<div class="content-header row">
    <div class="content-header-left col-md-9 col-12 mb-2">
        <div class="row breadcrumbs-top">
            <div class="col-12">
                <h2 class="content-header-title float-left mb-0">New Aplication</h2>
                <div class="breadcrumb-wrapper col-12">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a>Home</a>
                        </li>
                        <li class="breadcrumb-item active">
                            <a href="#">New Application</a>
                        </li>

                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="content-header-right text-md-right col-md-3 col-12 d-md-block d-none">
        <div class="form-group breadcrum-right">
            <div class="dropdown">
                <button class="btn-icon btn btn-primary btn-round btn-sm dropdown-toggle waves-effect waves-light" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="feather icon-settings"></i></button>
            </div>
        </div>
    </div>
</div>

<!-- Form wizard with icon tabs section start -->
<section id="icon-tabs">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Licence Aplication</h4>
                </div>
                <hr />
                <div class="card-content">
                    <div class="card-body">

                        <form action="#" class="icons-tab-steps wizard-circle">

                            <!-- Step 1 -->
                            <h6><i class="step-icon feather icon-home"></i> Step 1</h6>
                            <fieldset>
                                <h6>Applicant Details</h6>
                                <hr />

                                <div class="row mt-2">

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Registered Business Name </label>
                                            <input type="text" class="form-control">
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Location (Physical Address)</label>
                                            <input type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Postal Address </label>
                                            <input type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Telephone </label>
                                            <input type="text" class="form-control">
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Mobile</label>
                                            <input type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Email Address </label>
                                            <input type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Web Address </label>
                                            <input type="text" class="form-control">
                                        </div>
                                    </div>
                                </div>

                                <h6 class="mt-2">Name and Details of Authorized Representative</h6>
                                <hr />

                                <div class="row mt-2">

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label> Name </label>
                                            <input type="text" class="form-control">
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Physical Address</label>
                                            <input type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Telephone </label>
                                            <input type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Mobile</label>
                                            <input type="text" class="form-control">
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Email Address </label>
                                            <input type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Web Address </label>
                                            <input type="text" class="form-control">
                                        </div>
                                    </div>
                                </div>



                                <h6 class="mt-2">Legal Status of Applicant</h6>
                                <hr />

                                <div class="row mt-2">
                                    <ul class="list-unstyled mb-0">
                                        <li class="d-inline-block mr-2">
                                            <fieldset>
                                                <label>
                                                    <input type="checkbox" value="" checked="">
                                                    Sole Proprietorship
                                                </label>
                                            </fieldset>
                                        </li>
                                        <li class="d-inline-block mr-2">
                                            <fieldset>
                                                <label>
                                                    <input type="checkbox" value="">
                                                    Partnership
                                                </label>
                                            </fieldset>
                                        </li>
                                        <li class="d-inline-block mr-2">
                                            <fieldset>
                                                <label>
                                                    <input type="checkbox" value="">
                                                    Public Limited Liability Company
                                                </label>
                                            </fieldset>
                                        </li>
                                        <li class="d-inline-block">
                                            <fieldset>
                                                <label>
                                                    <input type="checkbox" value="">
                                                    Private Limited Liability Company
                                                </label>
                                            </fieldset>
                                        </li>
                                        <li class="d-inline-block">
                                            <fieldset>
                                                <label>
                                                    <input type="checkbox" value="">
                                                    Cooporative Society
                                                </label>
                                            </fieldset>
                                        </li>
                                        <li class="d-inline-block">
                                            <fieldset>
                                                <label>
                                                    <span>
                                                        <input type="checkbox" value="">
                                                    </span>
                                                    <span><input type="text" value="Others (Specify)" /></span>

                                                </label>
                                            </fieldset>
                                        </li>
                                    </ul>

                                </div>
                                <h6 class="mt-2">Supporting Documents</h6>
                                <hr />

                                <div class="mt-2">
                                    <div class="row d-flex flex-wrap">
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label> Certificate of Registration </label>
                                                <div class="custom-file">
                                                    <input type="file" class="custom-file-input" id="inputGroupFile01">
                                                    <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label> Certificate of Incorporation </label>
                                                <div class="custom-file">
                                                    <input type="file" class="custom-file-input" id="inputGroupFile01">
                                                    <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label> Memorandoum & Article of Association </label>
                                                <div class="custom-file">
                                                    <input type="file" class="custom-file-input" id="inputGroupFile01">
                                                    <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label> Deed of Partnership</label>
                                                <div class="custom-file">
                                                    <input type="file" class="custom-file-input" id="inputGroupFile01">
                                                    <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label> Deed of Trust</label>
                                                <div class="custom-file">
                                                    <input type="file" class="custom-file-input" id="inputGroupFile01">
                                                    <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                </div>



                            </fieldset>

                            <!-- Step 2 -->
                            <h6><i class="step-icon feather icon-briefcase"></i> Step 2</h6>
                            <fieldset>
                                <h6 class="mt-2">List and Particulars of Shareholders</h6>
                                <hr />


                                <div class="">
                                    <div class="">
                                        <div class="row">

                                            <div class="col-md-3 nopadding">
                                                <div class="form-group">
                                                    <label class="mt-2">Name</label>
                                                    <input type="text" class="form-control" id="Sharename" name="Sharename[]" value="" placeholder="Shareholder name">
                                                </div>
                                            </div>
                                            <div class="col-md-3 nopadding">
                                                <div class="form-group">
                                                    <label class="mt-2">Address</label>
                                                    <input type="text" class="form-control" id="Address" name="Address[]" value="" placeholder="Address">
                                                </div>
                                            </div>
                                            <div class="col-md-3 nopadding">
                                                <div class="form-group">
                                                    <label class="mt-2">Nationality</label>
                                                    <select class="form-control" id="Nationality" name="Nationality[]">
                                                        <option value="">--Nationality--</option>
                                                        <option value="">Nigeria</option>
                                                        <option value="">Egypt</option>
                                                        <option value="">Gambia</option>
                                                        <option value="">2018</option>
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="col-md-3 nopadding">
                                                <div class="form-group">
                                                    <label class="mt-2">Country of Usual Residence</label>

                                                    <div class="input-group">

                                                        <select class="form-control" id="usualResidence" name="usualResidence[]">
                                                            <option value="">--Country of usual residence--</option>
                                                            <option value="">Nigeria</option>
                                                            <option value="">Egypt</option>
                                                            <option value="">Gambia</option>
                                                            <option value="">2018</option>
                                                        </select>
                                                        <div class="input-group-btn">
                                                            <button class="btn btn-success" type="button" onclick="shareholder_fields();"> <span class="fa fa-plus" aria-hidden="true"></span> </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div id="shareholder_fields">

                                        </div>
                                        <div class="clear"></div>
                                    </div>
                                    <h6 class="mt-2">State if any shareholder has ever been convicted of a criminal offence in Nigeria or in any other country</h6>
                                    <hr />
                                    <div class="row">
                                        <div class="col-md-4 nopadding">
                                            <div class="form-group">
                                                <label class="mt-2">Convicted of criminal acts</label>

                                                <select class="form-control" id="shareholderCrime">
                                                    <option value="">--- please select ---</option>
                                                    <option value="Yes">Yes</option>
                                                    <option value="No">No</option>
                                                </select>



                                            </div>
                                        </div>
                                        <div class="col-md-6 nopadding">

                                            <div id="yesShareHolderCrime" style="display:none;">
                                                <div class="form-group">
                                                    <label class="mt-2">Details of Crime</label>
                                                    <input type="text" class="form-control" value="" placeholder="Shareholder name">
                                                </div>
                                            </div>

                                            <div id="noShareHolderCrime" style="display:none;">
                                                <p class="mt-3">Thank you for your response, please continue with the form</p>
                                            </div>

                                        </div>

                                    </div>
                                </div>

                                <h6 class="mt-2">List and Particulars of Directors</h6>
                                <hr />


                                <div class="">
                                    <div class="">
                                        <div class="row">

                                            <div class="col-md-3 nopadding">
                                                <div class="form-group">
                                                    <label class="mt-2">Name</label>
                                                    <input type="text" class="form-control" id="Directorname" name="Directorname[]" value="" placeholder="Director name">
                                                </div>
                                            </div>
                                            <div class="col-md-3 nopadding">
                                                <div class="form-group">
                                                    <label class="mt-2">Address</label>
                                                    <input type="text" class="form-control" id="directorAddress" name="Directoraddress[]" value="" placeholder="Address">
                                                </div>
                                            </div>
                                            <div class="col-md-3 nopadding">
                                                <div class="form-group">
                                                    <label class="mt-2">Nationality</label>
                                                    <select class="form-control" id="directorNationality" name="Directornationality[]">
                                                        <option value="">--Nationality--</option>
                                                        <option value="">Nigeria</option>
                                                        <option value="">Egypt</option>
                                                        <option value="">Gambia</option>
                                                        <option value="">2018</option>
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="col-md-3 nopadding">
                                                <div class="form-group">
                                                    <label class="mt-2">Country of Usual Residence</label>

                                                    <div class="input-group">

                                                        <select class="form-control" id="directorUsualResidence" name="DirectorusualResidence[]">
                                                            <option value="">--Country of usual residence--</option>
                                                            <option value="">Nigeria</option>
                                                            <option value="">Egypt</option>
                                                            <option value="">Gambia</option>
                                                            <option value="">2018</option>
                                                        </select>
                                                        <div class="input-group-btn">
                                                            <button class="btn btn-success" type="button" onclick="director_fields();"> <span class="fa fa-plus" aria-hidden="true"></span> </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div id="director_fields">

                                        </div>
                                        <div class="clear"></div>
                                    </div>
                                    <h6 class="mt-2">State if any director has ever been convicted of a criminal offence in Nigeria or in any other country</h6>
                                    <hr />
                                    <div class="row">
                                        <div class="col-md-4 nopadding">
                                            <div class="form-group">
                                                <label class="mt-2">Convicted of criminal acts</label>

                                                <select class="form-control" id="directorCrime">
                                                    <option value="">--- please select ---</option>
                                                    <option value="Yes">Yes</option>
                                                    <option value="No">No</option>
                                                </select>



                                            </div>
                                        </div>
                                        <div class="col-md-6 nopadding">

                                            <div id="yesDirectorCrime" style="display:none;">
                                                <div class="form-group">
                                                    <label class="mt-2">Details of Crime</label>
                                                    <input type="text" class="form-control" value="" placeholder="Director name">
                                                </div>
                                            </div>

                                            <div id="noDirectorCrime" style="display:none;">
                                                <p class="mt-3">Thank you for your response, please continue with the form</p>
                                            </div>

                                        </div>

                                    </div>
                                </div>



                            </fieldset>

                            <!-- Step 3 -->
                            <h6><i class="step-icon feather icon-image"></i> Step 3</h6>
                            <fieldset>
                                <h6 class="mt-2">Licence Details</h6>
                                <hr />
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="mt-2">Please select the type of licence applied for</label>

                                            <select class="form-control" id="licenceType">
                                                <option value="">--- please select ---</option>
                                                <option value="gasshipper">Gas Shipper</option>
                                                <option value="gastransporter">Gas Transporter</option>
                                                <option value="gasshipperagent">Gas Shipper Agent</option>
                                            </select>
                                        </div>

                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="mt-2">Please select the type of licence this application relates to</label>

                                            <select class="form-control" id="directorCrime">
                                                <option value="">--- please select ---</option>
                                                <option value="">New Licence</option>
                                                <option value="">Renewal</option>
                                                <option value="">Extension of an existing license</option>
                                                <option value="">The restriction of an existing licence</option>

                                            </select>
                                        </div>

                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="mt-2">Desired Effective date of the new licence, extention or restriction</label>

                                            <input type="date" class="form-control" />
                                        </div>

                                    </div>

                                </div>

                                <h6 class="mt-2">Details of previous applications made and licences held</h6>
                                <hr />
                                <div class="row">

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="mt-2">Does the applicant or related person hold any related licence ?</label>

                                            <select class="form-control" id="holdRelatedLicence">
                                                <option value="">--- please select ---</option>
                                                <option value="Yes">Yes</option>
                                                <option value="No">No</option>
                                            </select>
                                        </div>

                                    </div>
                                    <div id="holdRelatedLicenceDetails" class="col-md-8" style="display:none;">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="mt-2">Details of Licence(s)</label>

                                                    <input type="text" class="form-control" />
                                                </div>

                                            </div>

                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="mt-2"> Details of Licence(s) as attachment </label>
                                                    <div class="custom-file">
                                                        <input type="file" class="custom-file-input" id="file01">
                                                        <label class="custom-file-label" for="file01">Choose file</label>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <div id="holdRelatedLicenceMessage" style="display:none;">
                                        <p class="mt-3">Thank you for your response, please continue with the form</p>

                                    </div>


                                </div>

                                <div class="row">

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="mt-2">
                                                Has the applicant or any related person applied for(successfully
                                                or not) or intend to apply for any other related licences?
                                            </label>

                                            <select class="form-control" id="appliedRelatedLicence">
                                                <option value="">--- please select ---</option>
                                                <option value="Yes">Yes</option>
                                                <option value="No">No</option>
                                            </select>
                                        </div>

                                    </div>
                                    <div id="appliedRelatedLicenceDetails" class="col-md-8" style="display:none;">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="mt-3">
                                                        Type of licence(s) applied for or Intended to be applied for
                                                    </label>

                                                    <input type="text" class="form-control" />
                                                </div>

                                            </div>

                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="mt-2">
                                                        Type of licence(s) applied for or Intended to be applied for
                                                        as attachment
                                                    </label>
                                                    <div class="custom-file">
                                                        <input type="file" class="custom-file-input" id="file01">
                                                        <label class="custom-file-label" for="file01">Choose file</label>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <div id="appliedRelatedLicenceMessage" style="display:none;">
                                        <p class="mt-3">Thank you for your response, please continue with the form</p>

                                    </div>


                                </div>

                                <div class="row">

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="mt-2">
                                                Has the applicant or any related person previously had any
                                                licence revoked in the oil & gas value chain in the last 3 years?
                                            </label>

                                            <select class="form-control" id="revokedLicence">
                                                <option value="">--- please select ---</option>
                                                <option value="Yes">Yes</option>
                                                <option value="No">No</option>
                                            </select>
                                        </div>

                                    </div>
                                    <div id="revokedLicenceDetails" class="col-md-8" style="display:none;">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="mt-3">
                                                        Type of licence(s) revoked
                                                    </label>

                                                    <input type="text" class="form-control" />
                                                </div>

                                            </div>

                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="mt-3">
                                                        Type of licence(s) revoked as attachment
                                                    </label>
                                                    <div class="custom-file">
                                                        <input type="file" class="custom-file-input" id="file01">
                                                        <label class="custom-file-label" for="file01">Choose file</label>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <div id="revokedLicenceMessage" style="display:none;">
                                        <p class="mt-4">Thank you for your response, please continue with the form</p>

                                    </div>


                                </div>

                                <div class="row">

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="mt-2">
                                                Has/does the applicant or any related person previously had
                                                any gas licence application refused?
                                            </label>

                                            <select class="form-control" id="refusedLicence">
                                                <option value="">--- please select ---</option>
                                                <option value="Yes">Yes</option>
                                                <option value="No">No</option>
                                            </select>
                                        </div>

                                    </div>
                                    <div id="refusedLicenceDetails" class="col-md-8" style="display:none;">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="mt-3">
                                                        Type of licence(s) refused
                                                    </label>

                                                    <input type="text" class="form-control" />
                                                </div>

                                            </div>

                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="mt-3">
                                                        Type of licence(s) refused as attachment
                                                    </label>
                                                    <div class="custom-file">
                                                        <input type="file" class="custom-file-input" id="file01">
                                                        <label class="custom-file-label" for="file01">Choose file</label>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <div id="refusedLicenceMessage" style="display:none;">
                                        <p class="mt-3">Thank you for your response, please continue with the form</p>

                                    </div>


                                </div>

                            </fieldset>


                            <!-- Step 4 -->
                            <h6><i class="step-icon feather icon-image"></i> Step 4</h6>
                            <fieldset>
                                <div id="gasShipperAgentDiv" style="display:none;">
                                    <h6 class="mt-2">Details of Application (Gas Shipper Agent)</h6>
                                    <hr />
                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label class="mt-2">Name of Shipper</label>
                                                <input type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label class="mt-2">Location of Shipper </label>
                                                <input type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>
                                                    On which Entry/Exit Point will you book
                                                    and nominate capacity for Shipper?
                                                </label>
                                                <input type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>
                                                    What will be the maximum capacity you
                                                    will book/nominate for Shipper?
                                                </label>
                                                <input type="text" class="form-control">
                                            </div>
                                        </div>

                                    </div>
                                </div>

                                <div id="gasShipperLicenceDiv" style="display:none">
